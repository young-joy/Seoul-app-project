<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="@dimen/balloon_width"
        android:layout_height="@dimen/balloon_height"
        android:layout_margin="@dimen/balloon_margin"
        android:background="@drawable/round_bg"
        android:elevation="@dimen/elevation"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/balloon_badge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/balloon_margin"
            android:layout_marginEnd="@dimen/balloon_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_search"></ImageView>

        <TextView
            android:id="@+id/balloon_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/balloon_margin"
            android:layout_marginEnd="@dimen/balloon_margin"
            android:layout_weight="4"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/balloon_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
